{
  "id": "post",
  "label": "Post",
  "repeatable": true,
  "status": true,
  "format": "page",
  "json": {
    "Main": {
      "title": {
        "type": "StructuredText",
        "config": {
          "label": "Title",
          "placeholder": "Post Title",
          "allowTargetBlank": true,
          "single": "heading1"
        }
      },
      "uid": { "type": "UID", "config": { "label": "UID", "placeholder": "" } },
      "hidepagetitle": {
        "type": "Boolean",
        "config": {
          "label": "HidePageTitle",
          "placeholder_false": "Show",
          "placeholder_true": "Hide",
          "default_value": false
        }
      },
      "featuredimage": {
        "type": "Image",
        "config": {
          "label": "FeaturedImage",
          "constraint": {},
          "thumbnails": []
        }
      },
      "excerpt": {
        "type": "StructuredText",
        "config": {
          "label": "Excerpt",
          "placeholder": "Craft a short excerpt",
          "allowTargetBlank": true,
          "single": "paragraph"
        }
      },
      "slices": {
        "type": "Slices",
        "fieldset": "Slice Zone",
        "config": { "choices": { "content": { "type": "SharedSlice" } } }
      }
    },
    "SEO": {
      "metadescription": {
        "type": "Text",
        "config": { "label": "Meta Description", "placeholder": "" }
      },
      "metaimage": {
        "type": "Image",
        "config": { "label": "Meta Image", "constraint": {}, "thumbnails": [] }
      },
      "canonicalurl": {
        "type": "Text",
        "config": { "label": "Canonical Url", "placeholder": "" }
      }
    }
  }
}
